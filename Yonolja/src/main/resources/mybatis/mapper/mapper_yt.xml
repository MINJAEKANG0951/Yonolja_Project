	<select id="selectPost" resultType="com.human.springboot.DTO_YT">
select num,post_seq,post_category,post_title,post_date,user_id from
    
    (select 
    ROW_NUMBER() OVER (ORDER BY a.post_date ASC) as num,
    a.post_seq , 
    a.post_category, 
    a.post_title, 
    a.post_date, 
    b.USER_ID
from 
    yonolja_post a
join 
    Yonolja_user b 
on 
    a.user_seq = b.user_seq
    ORDER BY 
    post_seq desc)
    

     
</select>

	
