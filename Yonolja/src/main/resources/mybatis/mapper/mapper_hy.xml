	<insert id="addRoomType">
	    insert into yonolja_roomtype (
	        ROOMTYPE_SEQ,
	        ROOMTYPE_NAME,
	        PLACE_SEQ,
	        ROOMTYPE_IMGS, 
	        ROOMTYPE_CAPACITY,
	        ROOMTYPE_PRICE,
	        ROOMTYPE_GUIDE
	    )
	 
	     values(
	        roomtype_seq.nextval,
	        #{param1},
	        #{param2},
	     	#{param3},
	        #{param4},
	  		#{param5},
	  		#{param6}
	    )
	</insert>



    <select id="getRoomtype" resultType="com.human.springboot.DTO_HY_roomtypeDTO">
        SELECT * FROM yonolja_roomtype
        where place_seq = #{param1}
    </select>


</mapper>




